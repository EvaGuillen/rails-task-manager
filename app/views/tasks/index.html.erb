<h2>My tasks</h2>

<% @tasks.each do |task| %>
<p>
  <% if task.completed == true %>
    <input type="checkbox" id="true" name="checkbox-true" checked>
  <% else %>
    <input type="checkbox" id="false" name="checkbox-false">
  <% end %>

  <%= link_to task.title, task_path(task) %>
  <%= link_to 'Delete', task_path(task.id), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
</p>

<%= link_to '+ Add a task', new_path %>
